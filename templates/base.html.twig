<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Art Viewer{% endblock %}</title>

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">

        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap-4.1.3.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/jquery-ui-1.12.1.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome-4.7.0.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}">
        {% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts %}
            {# jQuery #}
            <script src="{{ asset('js/jquery-3.3.1.min.js') }}"></script>
            <script src="{{ asset('js/jquery-ui-1.12.1.min.js') }}"></script>

            {# Bootstrap #}
            <script src="{{ asset('js/bootstrap-4.1.3.min.js') }}"></script>

            {# FosJsRouting #}
            <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
            <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>

            {# App #}
            <script src="{{ asset('js/main.js') }}"></script>
        {% endblock %}
    </body>
</html>
